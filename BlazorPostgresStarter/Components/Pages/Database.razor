@page "/database"
@rendermode InteractiveServer
@using BlazorPostgresStarter.Services
@inject SampleItemService ItemService

<PageTitle>Database Demo</PageTitle>

<h1>üóÑÔ∏è PostgreSQL Database Demo</h1>

<p>This page demonstrates the PostgreSQL database connection with Entity Framework Core.</p>

<div class="alert alert-success">
    ‚úÖ Database connected! Add items below to test CRUD operations.
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Add New Item</h5>
        <div class="input-group">
            <input @bind="newItemName" 
                   class="form-control" 
                   placeholder="Enter item name..." 
                   @onkeypress="HandleKeyPress" />
            <button class="btn btn-primary" @onclick="AddItem" disabled="@string.IsNullOrWhiteSpace(newItemName)">
                ‚ûï Add Item
            </button>
        </div>
    </div>
</div>

<h3>Items in Database (@items.Count)</h3>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (!items.Any())
{
    <div class="alert alert-info">
        No items yet. Add your first item above! üëÜ
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.CreatedAt.ToString("g")</td>
                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item.Id)">
                                üóëÔ∏è Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Data.SampleItem> items = new();
    private string newItemName = string.Empty;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
    }

    private async Task LoadItems()
    {
        isLoading = true;
        items = await ItemService.GetAllItemsAsync();
        isLoading = false;
    }

    private async Task AddItem()
    {
        if (!string.IsNullOrWhiteSpace(newItemName))
        {
            await ItemService.AddItemAsync(newItemName);
            newItemName = string.Empty;
            await LoadItems();
        }
    }

    private async Task DeleteItem(int id)
    {
        await ItemService.DeleteItemAsync(id);
        await LoadItems();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(newItemName))
        {
            await AddItem();
        }
    }
}